@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500&subset=cyrillic')
@import 'mixins/reset.styl'
@import 'mixins/mui.styl'
@import 'mixins/animate.styl'
@import 'variables.styl'

reset()

body, html {
	height: 100%
	display: flex
	flex-direction: column
	min-height: 100vh
}

body {
	font-family: 'Roboto', sans-serif
	font-size: 16px
	font-weight: 400
	line-height: 1.5
	background-color: var(--baseBackground)
}

:global(.root) {
	display: flex
	min-height: 100%
}

:global(.capitalize) {
	text-transform: capitalize
}

:global(.hide) {
	display: none
}

:global(h1) {
	font-weight: 400
}

:global(h2) {
	font-weight: 500
}

:global(.silent-text) {
	color: $gray
}

:global(.content) {
	fadeIn(1s)

	padding: $padding
	height: 100%
	width: 100%
	background-color: var(--white)
}

@media screen and (max-width: $screen-tablet) {
	:global(.content) {
		padding: 0.25rem 1rem
	}
}
